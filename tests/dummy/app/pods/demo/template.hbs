<div class="dummy-body">
  {{frost-notifier}}
  {{outlet}}
  <div class="dummy-content">
    <div class="frost-pods-demo">
      <div class="controls">
        {{#each items as |item|}}
          {{frost-button class='medium secondary text'
            onClick=(action (mut activePod) item)
            text=(concat 'Toggle ' item)
          }}
        {{/each}}
      </div>
      {{frost-pods
        active=activePod
        pods=(hash
          map=(component 'map-pod')
          node=(component 'node-pod')
          search=(component 'search-pod')
          details=(component 'details-pod'
            menu=(hash
                close=(component 'frost-button'
                  priority='primary'
                  size='small'
                  onClick=(action 'closeThis')
                  text='Close'
                )
            )
          )
        )
      }}
    </div>
  </div>
</div>
